<%= render 'layouts/alert' %>

<div class="container py-5">
  <h5 class="mb-5">
    <span class="bg-dark text-white py-2 px-5 font-weight-bold">
      ジャンル一覧・追加
    </span>
  </h5>

  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <div class="row form-group justify-content-center py-5">
      <div class="col-md-2 text-center">
        <%= f.label :"ジャンル名", class: "col-form-label", for: "genre_name" %>
      </div>

      <div class="col-md-6">
        <%= f.text_field :name, class: "form-control", placeholder: "ジャンル名", id: "genre_name" %>
      </div>

      <div class="col-md-2">
        <%= f.submit "新規登録", class: "btn btn-light bg-gold btn-block" %>
      </div>
    </div>
  <% end %>

  <table class="table table-bordered mx-auto w-50">
    <thead class="table bg-dark text-white">
      <tr>
        <th class="px-4">ジャンル</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td class="px-4">
          <%= genre.name %>
        </td>
        <td class="text-center table-active">
          <%= link_to "編集する", edit_admin_genre_path(genre), class: "text-dark" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>