<%= render 'layouts/alert' %>

<div class="container py-5">
  <h5 class="d-inline py-2 px-5 bg-dark text-white"><strong>商品詳細</strong></h5>

  <div class="row justify-content-center py-5">

    <div class="col-lg-4 pb-3">
      <%= image_tag @item.get_image(350,245), class: "img-thumbnail mx-auto d-block" %>
    </div>

    <div class="col-lg-7">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>商品名</th>
            <td class="w-75"><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td class="w-75"><%= @item.introduction %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td class="w-75"><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th>税込価格<br>
            <span class="small">(税抜価格)</span></th>
            <td class="w-75"><%= @item.add_tax_price.to_s(:delimited) %> ( <%= @item.price.to_s(:delimited) %> ) 円</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td class="w-75 font-weight-bold">
              <% if @item.is_active == "on_sale" %>
                <span class="text-success"><%= @item.is_active_i18n %></span>
              <% else %>
                <span class="text-black-50"><%= @item.is_active_i18n %></span>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>

      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-light bg-gold btn-block" %>
    </div>

  </div>
</div>