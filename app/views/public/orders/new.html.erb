<div class="container py-5">
  <h5 class="d-inline py-2 px-5 bg-dark text-white">
    <strong>注文情報入力</strong>
  </h5>

  <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
    <h5 class="font-weight-bolder">１, 支払方法</h5>
    <div class="form-check">
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
    </div>
    <div class="form-check">
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
    </div>

    <h5 class="font-weight-bolder">２, お届け先</h5>
    <div class="form-check">


      <%= @customer.address %>

    </div>
    <div class="form-check">


      <%= f.select :address_id, options_from_collection_for_select(@addresses, :id, :address_display), {}, { class: 'form-control'} %>

    </div>

    <div class="form-check">


     <div class="form-group row">
        <%= f.label :"郵便番号(ハイフンなし)", class: "col-md-3 col-form-label font-weight-bold" %>
        <div class="col-md-4">
          <%= f.text_field :postal_code, class: "form-control", placeholder:"0000000" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :"住所", class: "col-md-3 col-form-label font-weight-bold" %>
        <div class="col-md-8">
          <%= f.text_field :address, class: "form-control", placeholder:"東京都渋谷区代々木神園町0-0" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :"宛名", class: "col-md-3 col-form-label font-weight-bold" %>
        <div class="col-md-4">
          <%= f.text_field :name, class: "form-control", placeholder:"令和道子" %>
        </div>
      </div>

    </div>

      <%= f.submit "確認画面へ進む", class: "btn btn-light bg-gold btn-block" %>

    <% end %>

</div>