<%= render 'layouts/alert' %>

<div class="container py-5">
  <h5 class="mb-5">
    <span class="bg-dark text-white py-2 px-5 font-weight-bold">
      <%= @customer.first_name %> <%= @customer.last_name %>さん の 会員情報編集
    </span>
  </h5>

  <div class="w-75 mx-auto my-5">
    <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>

      <div class="form-group row">
        <%= f.label :"会員ＩＤ", class: "col-sm-3 col-form-label" %>
        <div class="col-sm-4 px-3 my-auto">
          <%= @customer.id %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :"氏名", class: "col-sm-3 col-form-label" %>
        <div class="col-sm-4">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :"フリガナ", class: "col-sm-3 col-form-label" %>
        <div class="col-sm-4">
          <%= f.text_field :first_name_kana, class: "form-control" %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :last_name_kana, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :"郵便番号", class: "col-sm-3 col-form-label" %>
        <div class="col-sm-4">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :"住所", class: "col-sm-3 col-form-label" %>
        <div class="col-sm-9">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :"電話番号", class: "col-sm-3 col-form-label" %>
        <div class="col-sm-4">
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :"メールアドレス", class: "col-sm-3 col-form-label" %>
        <div class="col-sm-4">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :"会員ステータス", class: "col-sm-3 col-form-label" %>
          <div class="form-check form-check-inline">
          <%= f.radio_button :is_deleted, :membership, id: "customer_membership" %>
          <%= f.label :"有効", class: "form-check-label px-2", for: "customer_membership" %>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :is_deleted, :unsubscribe, id: "customer_unsubscribe" %>
          <%= f.label :"退会", class: "form-check-label px-2", for: "customer_unsubscribe" %>
        </div>
      </div>

      <div class="actions pt-3">
        <%= f.submit "変更を保存", class: "btn btn-light bg-gold btn-block" %>
      </div>
    <% end %>

  </div>

</div>