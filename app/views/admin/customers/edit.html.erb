<div class="container pt-5">
  <h5 class="d-inline p-2 px-5 bg-dark text-white"><strong>会員登録</strong></h5>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :telephone_number %>
    <%= f.phone_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :telephone_number %>
    <%= f.phone_field :telephone_number, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-light bg-gold btn-block" %>
  </div>
<% end %>

</div>