<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  <div class="form-group">
    <label_for="genre_name">Title</label>
    <%= f.text_field :name,  id: "genre_name" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  </div>
<% end %>



<table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to "Edit", edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>