<div class="container pt-5">
  <h3 class="menu-heading text-gold">　<strong>ジャンル一覧・追加</strong></h3>

    <div class="row justify-content-center py-4">

      <div class="col-md-4 pr-4">
        <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <div class="form-group">
          <label_for="genre_name">ジャンル名</label>
          <%= f.text_field :name, class: "form-control", placeholder: "ジャンル名", id: "genre_name" %>
        </div>
        <div class="form-group text-right">
          <%= f.submit '新規登録', class: "btn btn-dark bg-gold" %>
        </div>
        <% end %>
      </div>



      <div class="col-md-6">
        <table class="table table-bordered">
          <thead class="table bg-dark text-white">
          <tr>
            <th class="px-4">ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td class="px-4">
              <%= genre.name %>
            </td>
            <td class="text-center table-active">
              <%= link_to "編集する", edit_admin_genre_path(genre), class: "text-dark" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>

</div>