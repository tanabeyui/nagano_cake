<div class="container pt-5">
  <h5 class="d-inline p-2 px-5 bg-dark text-white"><strong>商品詳細</strong></h5>

  <div class="row justify-content-center py-5">

    <div class="col-lg-4 text-center pb-3">
      <%= image_tag @item.get_image(350,400), class: "img-thumbnail" %>
    </div>


    <div class="col-lg-6">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>商品名</th>
            <td class="w-75"><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td class="w-75"><%= @item.introduction %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td class="w-75"><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th>税込価格<br>
            <span class="small">(税抜価格)</span></th>
            <td class="w-75"><%= (@item.price * 1.1).to_s(:delimited) %> (<%= @item.price %>) 円</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td class="w-75"><%= @item.is_active %></td>
          </tr>
        </tbody>
      </table>

      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-light bg-gold btn-block" %>
    </div>

  </div>
</div>